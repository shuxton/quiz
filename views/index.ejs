      <form id="xx" action="/quiz/img/<%=cquestions[y-mcq]._id%>/<%=currentUser._id%>/<%=currentUser.qno%>" method="POST">
        <button class="btn btn-primary" id="sub1" type="submit" value="0"
          style="font-size: 30px;background-color:firebrick;border-width: 0px;margin-top: 10px;margin-left: 15px;">
          Next Clue
        </button>

      </form>
      <%}}%>
      <form id="xx" action="/quiz/ans/<%=cquestions[y-mcq]._id%>/<%=currentUser._id%>/<%=currentUser.qno%>" method="POST">
