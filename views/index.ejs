        <button class="btn btn-primary" id="sub" type="submit"
          style="font-size: 30px;background-color: tomato;border-width: 0px;margin-top: 10px;margin-left: 15px;">
          Submit
        </button>
      </form>

      <%}else if(s>n){%>

      <p style="font-size: 50px;color: goldenrod;">Come back when the contest has started :)</p><br />


      <a class="btn btn-primary" id="sub" href="/" style="font-size: 30px;background-color: tomato;border-width: 0px;">
        Home Page
      </a>
      <%}else if(dis<=0){%>

        <p style="font-size: 50px;color: goldenrod;">The contest has ended already :(</p><br />
        <p style="font-size: 50px;color: lightgreen;"></p><br />
  
        <a class="btn btn-primary" id="sub" href="/quiz/leaderboard"
          style="font-size: 30px;background-color: tomato;border-width: 0px;">
          Leaderboard
        </a>
      <%}else {%>
      <p style="font-size: 50px;color: goldenrod;">Hope you had fun!</p><br />
      <p style="font-size: 50px;color: lightgreen;">Your score is <%=currentUser.score%></p><br />

      <a class="btn btn-primary" id="sub" href="/quiz/leaderboard"
        style="font-size: 30px;background-color: tomato;border-width: 0px;">
        Leaderboard
      </a>

      <%}%>
    </center>
    </div>
  </div>
 
</div>

        
         
<script>
  window.onload = function () {
    if (!window.location.hash) {
      window.location = window.location + '#loaded';
      window.location.reload();
    }
  }

  var cur = 30;
  var qt = setInterval(function () {
    tleft = cur;
    document.getElementById("qtime").innerHTML = "Time Left:" + tleft;
    if (tleft == 0) { document.getElementById("sub").click(); }
    cur = cur - 1;
  }, 1000)

</script>

