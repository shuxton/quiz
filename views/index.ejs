        <p id="qtime" style="font-size: 20px;color: crimson;"></p>
      </div>
      <center>

        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
          <%if(cquestions[y-mcq].op1){for(var i=0;i<=imgCount;i++){%>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail" style="width: 200px;">
              <%if(i==0){%>
              <img src="<%=cquestions[y-mcq].op1%>" style="height: 200px;padding: 10px;">
              <%}%>
              <%if(i==1){%>
              <img src="<%=cquestions[y-mcq].op2%>" style="height: 200px;padding: 10px;">
              <%}%>
                <%if(i==2){%>
              <img src="<%=cquestions[y-mcq].op3%>" style="height: 200px;padding: 10px;">
              <%}%>
                  <%if(i==3){%>
              <img src="<%=cquestions[y-mcq].op4%>" style="height: 200px;padding: 10px;">
              <%}%>
            </div>
          </div>
          <%}%>
            </div>
