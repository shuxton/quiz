  <div class="col-sm-12">
    <div class="jumbotron" style="background:transparent !important">
      <%if(y<mcq){%>
      <form id="x" action="/quiz/<%=questions[y]._id%>/<%=currentUser._id%>/<%=currentUser.qno%>" method="POST">


        <div class="caption">
         <br> <h4 style="font-size: 35px;color: goldenrod;"><%=y+1%>)<%= questions[y].question %></h4>
          

          <p id="qtime" style="font-size: 20px;color: crimson;"></p>
        </div>
