  <title><%=title%> - Leaderboard</title>
  <%}else{%>
  <title> Leaderboard</title>
  <%}%>
</head>

<body>
  <header>
    <%if(url!=null){%><div class="od"><a id="club" href="/">
      <img src="<%=url%>" style="width: 100px;"></a><br>
    <%}else if(title!=null){%>
  <div class="od"><a id="club" href="/"
      style="color: dodgerblue;font-style: oblique;font-weight: bold;font-size: 45px;"><%=title%></a><br />
    <%}else{%>
    <div class="od"><a id="club" href="/"
        style="color: dodgerblue;font-style: oblique;font-weight: bold;font-size: 45px;">Quiz</a><br />
      <%}%>
      <ul>

        <% if(!currentUser){ %>
      <li><a href="/login">Log in</a></li>
      <li><a href="/register">Sign up</a></li>
      <%}else{%>
      <li><a href="#">Signed in as <%=currentUser.email%></a></li>
      <li><a href="/logout">Logout</a></li>
      <%}%>
      </ul><br>
    </div>
    </div>
