                   <th style="align-items: center;";">Rank</th>

                   <th style="align-items: center;";">Name</th>

                   <th style="align-items: center;";">Score</th>
                   </center>
               </tr>
              </thead>
               <%var x=1;user.forEach(function(user){ if(user.ver){%>
                <tr style="color: cadetblue;align-items: center;">
                  <center>
                  <td ><%=x%></td>
                  <td><%=user.email%></td>
                  <td><%=user.score%></td>
                  </center>
                </tr>
                <%x=x+1}})%>
      </table>
    </div>
    
      </center>

